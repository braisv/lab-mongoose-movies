<h2>Celebrities</h2>

  {{#each celeb}}
      <p><a href="/celebrities/{{this._id}}">{{this.name}}</a></p>
      
      <form action="/celebrities/{{_id}}/delete" method="POST">
      <button type="submit">Delete</button>
      </form>

      <form action="/celebrities/{{_id}}/edit" method="POST">
      <button type="submit">Edit</button>
      </form>
  {{/each}}


  <a href="/celebrities/new">Add your favourite celebrities</a>