<h2>Movies</h2>

  {{#each movie}}
      <p><a href="/movies/{{this._id}}">{{this.title}}</a></p>
      
      <form action="/movies/{{_id}}/delete" method="POST">
      <button type="submit">Delete</button>
      </form>

      <form action="/movies/{{_id}}/edit" method="POST">
      <button type="submit">Edit</button>
      </form>
  {{/each}}


  <a href="/movies/new">Add your favourite movies</a>